{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ClioBulk",
  "version": "0.1.0",
  "identifier": "com.cliobulk.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5199",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ClioBulk 2.0 - Pro Image Processor",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
